  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>

  <div class="container">

    <div class="row">

      <nav id="my_nav_bar" class="navbar navbar-expand-lg navbar-light fixed-top" style="background-color: white;">


          <a id="logo_link" style="display: flex; place-content: flex-end;" class="navbar-brand" href="https://alcppp.com/">
            <img style="width: 35%;" src="/sites/default/files/inline-images/ALC_logo.png">
          </a>


        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>



          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">

              <li class="nav-item">
                  <p style="font-size: 24px;">American Lending Center Paycheck Protection Program Platform</p>
              </li>
            </ul>
            <form id="frm_login_create_account_links" class="form-inline my-2 my-lg-0" style="margin-right: 10%;">
              <input
                id="login_input"
                class="nav_bar_links"
                onclick="window.location='/user/login';"
                style="margin-right: 25px; border: none; background: white; color: #3D50DF;
                        -webkit-box-shadow: inset 0 0 5px white; margin-top: 15px;"
                type="button"
                value="Sign In"
              />
              <input
                id="register_input"
                class="nav_bar_links"
                onclick="window.location='/user/register';"
                style="background-color: #3D50DF; color: white; border: none; border-radius: 5px; margin-bottom: 15px;
                        margin-top: 29px; width: 145px; padding: 12px;"
                type="button"
                value="Create an account"
              />
            </form>
          </div>

      </nav>

    </div>

  </div>

    {% if path == '/user/login' %}

        <div id="header2">

        </div>

    {% endif %}

    {% if path == '/user/login' %}

      <div class="container">
        <div class="row">

          <div class="jumbotron" style="background-color: white; position: relative;
                                      box-shadow: 0 0 10px rgba(0, 0, 0, 0.2),
                                      0 5px 5px 0 rgba(0, 0, 0, 0.24); margin-top: 100px;
"         >

           <div class="simplelogin-link">
             <div class="signreg">{{ 'Sign In'|t }}</div>
             <div class="forgot-password">
               <a id="forgot_password" href="{{ base_path }}user/password">{{ 'Forgot your password?'|t }}</a>
             </div>
           </div>

            {{ page.highlighted }}
            {{ page.content }}

          </div>
        </div>

      </div>

    {% endif %}

    {% if path == '/user/login' %}
        <div style="text-align: center;">
            <p style="font-size: 16px;"><strong>Ready to File a PPP Application?<a href="/user/register"
             style="margin-left: 20px; color: #3D50DF;">Create account</a></strong></p>
        </div>
    {% endif %}

{#-----------------------------------------------------------------------------------------#}

    {% if path == '/user/register' %}

            <div class="container">

              <div class="jumbotron" style="background-color: white; position: relative;
                                      box-shadow: 0 0 10px rgba(0, 0, 0, 0.2),
                                      0 5px 5px 0 rgba(0, 0, 0, 0.24); margin-top: 100px;
"             >

                <div class="simpleregister-link">

                  <div>Let's start by creating an account</div>

                </div>

                    {{ page.highlighted }}
                    {{ page.content }}

                    <div>
                        <p class="terms_and_condition_sign_in">By clicking Create Account you agree to our <a style="color: #3D50DF" href="https://americanlendingcenter.com/terms-and-conditions/">
                                Terms of Service</a> and <a style="color: #3D50DF" href="https://americanlendingcenter.com/privacy-policy-2/">Privacy Policy</a>
                        </p>
                    </div>

                    <div style="text-align: center">
                        <p class="terms_and_condition_sign_in">Already have an account? <a style="color: #3D50DF;" href="/user/login">Sign In</a></p>
                    </div>

                </div>
            </div>

    {% endif %}

    {% if path == '/user/password' %}


      <div class="container">

        <div class="jumbotron" style="background-color: white; position: relative;
                                      box-shadow: 0 0 10px rgba(0, 0, 0, 0.2),
                                      0 5px 5px 0 rgba(0, 0, 0, 0.24); margin-top: 100px;
">

          <div class="simplelogin-link">

            <div class="signreg">{{ 'Forgot Password'|t }}</div>

          </div>

          {{ page.highlighted }}
          {{ page.content }}


        </div>
      </div>


    {% endif %}

